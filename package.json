{
    "name": "template",
    "version": "0.0.1",
    "description": "Template for nodejs module with typescript",
    "main": "index.js",
    "scripts": {
        "up": "ncu && ncu -u && rimraf ./package-lock.json && npm i",
        "ncu": "ncu",
        "pub": "npm run build && npm publish ./dist && rimraf ./dist",
        "build": "rimraf ./dist && npm run lint && tsc && json-key-remover && copy-files-from-to",
        "lint": "eslint \"./src/**/*.{js,ts}\" --quiet --fix && tsc --noEmit",
        "lint:tests": "eslint \"./tests/**/*.{js,ts}\" --quiet --fix",
        "test": "mocha -r ts-node/register --config ./tests/mocha.config.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/template-project-ts-module.git"
    },
    "keywords": [
        "templates",
        "typescript",
        "module"
    ],
    "author": "Nuzhnov A.A.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samurayii/template-project-ts-module/issues"
    },
    "homepage": "https://github.com/samurayii/template-project-ts-module.git#readme",
    "devDependencies": {
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.23",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "eslint": "^7.4.0",
        "json-key-remover": "^0.0.2",
        "mocha": "^8.0.1",
        "npm-check-updates": "^7.0.2",
        "copy-files-from-to": "^3.1.4",
        "rimraf": "^3.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "remover": {
        "target": "./package.json",
        "destination": "./dist/package.json",
        "remove": [
            "remover",
            "devDependencies",
            "scripts"
        ]
    },
    "copyFiles": [
        {
            "from": "README.md",
            "to": "./dist/README.md"
        }
    ]
}
